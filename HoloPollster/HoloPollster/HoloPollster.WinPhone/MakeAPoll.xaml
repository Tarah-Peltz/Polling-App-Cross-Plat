<Page
    x:Class="HoloPollster.WinPhone.MakeAPoll"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HoloPollster.WinPhone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer>
        <Grid Name="grid">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Name="AdderSet" Grid.Row="0" Orientation="Horizontal" Height="640" VerticalAlignment="Bottom" Margin="10,0" RenderTransformOrigin="0.489,0.5">
                <Button Height="100" HorizontalAlignment="Stretch" x:Name="Adder"
                    Background="PowderBlue" Content="Add a question"
                    Foreground="Black" Click="AddQuestion" Margin="0,270" Width="194" />
                <Button x:Name="Finalize" Content="Done! Create quiz"
                        Background="AliceBlue" Foreground="Black" HorizontalAlignment="Stretch"
                        Click="FinalizePoll" Margin="0,0,0,270" VerticalAlignment="Bottom" Height="100" Width="184"/>
            </StackPanel>
        </Grid>

    </ScrollViewer>
</Page>
